<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liveus.dao.BlogMapper">

  <sql id="Base_Column_List">
    id, title, summary,content,html
  </sql>

  <insert id="insertBlog" parameterType="com.liveus.pojo.entity.Blog">
    insert into blog (title, content,html,theme,blogtag,blogclass,blogtype,sourcename,sourcelink,isfinished,create_by,create_time)
    values (#{title,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR}, #{html,jdbcType=VARCHAR}, #{theme,jdbcType=VARCHAR},
            #{blogtag,jdbcType=VARCHAR}, #{blogclass,jdbcType=VARCHAR}, #{blogtype,jdbcType=VARCHAR}, #{sourcename,jdbcType=VARCHAR},
            #{sourcelink,jdbcType=VARCHAR}, #{isfinished,jdbcType=INTEGER}, #{create_by,jdbcType=INTEGER}, sysdate())
  </insert>

  <select id="getBlogById" parameterType="int" resultType="com.liveus.pojo.entity.Blog">
    SELECT * FROM blog where isfinished = 2 and id = #{id,jdbcType =INTEGER}
  </select>

  <select id="getAllBlogs" parameterType="string" resultType="com.liveus.pojo.entity.Blog">
     SELECT * FROM blog
     where isfinished = 2
     and deleted = 0
     <if test="searchContent !=null and searchContent != ''">
        and title like concat('%',#{searchContent,jdbcType=VARCHAR},'%')
     </if>
     order by create_time
  </select>

  <select id="getTitle" parameterType="string" resultType="string">
    SELECT title FROM BLOG
    WHERE isfinished = 2
    AND deleted = 0
    <if test="searchTitle !=null and searchTitle != ''">
      AND title like concat('%',#{searchTitle,jdbcType=VARCHAR},'%')
    </if>
    ORDER BY create_time
    LIMIT 5
  </select>

</mapper>